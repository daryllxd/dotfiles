function tabs {
  tabset $* && tmux
}

function ytdl {
  say 'downloading'
  nohup sh -c "youtube-dl -o '~/Downloads/trainer/watch/`date +%Y-%m-%d` %(title)s' $1 && say 'download finished' &" > ~/Downloads/trainer/watch/nohup.out
}

function itermFront {
  osascript -e 'tell application "System Events" to tell process "iTerm2"' \
            -e 'set frontmost to true' \
            -e 'end tell'
}

function git-new-remote-tracking {
  git checkout -b $1 && git push -u origin $1
}

function git_branch_name {
  val=`git branch 2>/dev/null | grep '^*' | colrm 1 2`
    echo "$val"
}

function mkd() {
  mkdir -p "$@" && cd "$@"
}

function git-nuke {
  git branch -D $1 && git push origin :$1
}
compdef _git git-nuke=git-checkout

function git-on-master {
  branch=`git_branch_name`
    git checkout master && git pull --rebase 
    git checkout $branch
    git rebase master
}

function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status
      fi
}

function rails-start {
  bundle install && rails server "$@" && tput bel
}

function rrg {
  rake routes | grep $1
}

function take {
  mkdir $1
    cd $1
}

function gac {
  git add -A && git commit -m "$*"
}

# Allows commit message without typing quotes (can't have quotes in the commit msg though).
function gc {
  git commit -m "$*"
}

# Commit message that overrides no-verify
function gcnv {
  git commit --no-verify -m "$*"
}

function gcp {
  git commit -m "$*" && git push
}

function gp {
  git push --no-verify $* && tput bel
}

function gpu {
  git pull $* && tput bel
}

fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    fg
      zle redisplay
  else
    zle push-input
      zle clear-screen
      fi
}

zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z
