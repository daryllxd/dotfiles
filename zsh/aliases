# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias -g G='| grep'
alias -g L='| less'
alias -g M='| more'
alias a="ls"
alias ack='ag'
alias al='subl ~/.dotfiles/zsh/aliases'
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias c='cd'
alias cl='clear'
alias d='cd ~/.dotfiles && s .'
alias dbprep='rdm && rdtp'
alias e="bundle install && bundle exec guard && tput bel"
alias f="flog"
alias fs='foreman start'
alias gac='git add -A && git commit -m'
alias gad='git add --all .'
alias gb='git branch'
alias gbc='gdc'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gcl='git clone'
alias gcm="git commit -m"
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git diff master'
alias get='sudo apt-get install'
alias gg='git lg'
alias gi="gem install"
alias gp='git push'
alias gpf='git push -f'
alias gpr='git pull --rebase'
alias grc='git rebase --continue'
alias gre='git reset --hard HEAD && git clean -f         '
alias gs='git status'
alias h="heroku"
alias hpr='hub pull-request'
alias hp='git push heroku'
alias j="bundle install && jekyll serve --watch"
alias o="open ."
alias p="pry"
alias q="subl ."
alias rc='rails console'
alias rdm="bundle exec rake db:migrate"
alias reload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"
alias rdr="rake db:rollback"
alias rdrm="rake db:rollback && rake db:migrate"
alias red="rake erd && open erd.pdf"
alias rds="be rake db:seed"
alias re="rake db:reset"
alias rdmm='rake db:migrate && rake db:migrate:redo && rake db:schema:dump && rake db:test:prepare && rake db:seed && tput bel'
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'
alias retagwithcoffee='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp * && coffeetags -R -f >> tags'
alias review="git diff master"
alias rg="rails generate"
alias rgm="rails generate migration"
alias rk='killall -9 ruby'
alias rs='bundle install && rails server -p 3000 && tput bel'
alias rt="be rake db:test:prepare"
alias s="subl ."
alias safepush='git pull --rebase && bundle install && rdm && rake && git push'
alias sc='staging-console'
alias shpush='rake && hpush'
alias sp='safepush'
alias squash='git rebase -i master'
alias staging='git push heroku-staging master'
alias startredis='redis-server /usr/local/etc/redis.conf &'
alias t="tmux"
alias ta="t a -t"
alias tail-logs='heroku logs -t'
alias track='git checkout -t'
alias ts="t ls"
alias u='cd ..'
alias v='vim'

# Heroku staging
alias staging-console='heroku run console --remote staging'
alias staging-tail='heroku logs --tail --remote staging'

# Heroku production
alias production-console='heroku run console --remote production'
alias production-tail='heroku logs --tail --remote production'

# # Heroku databases

alias db-pull-staging='heroku pg:pull --remote staging --confirm `basename $PWD`-staging'
alias db-pull-production='rake db:drop && heroku pg:pull --remote production --confirm `basename $PWD`-production'

alias db-copy-production-to-staging='heroku pgbackups:restore DATABASE `heroku pgbackups:url --remote production` --remote staging  --confirm `basename $PWD`-staging'
alias db-backup-production='heroku pgbackups:capture --remote production'
alias db-backups='heroku pgbackups --remote production'

alias levelup-get-production='curl -o ~/Downloads/latest.dump `heroku pgbackups:url --app levelup-production`'
alias levelup-db-fix='killruby ; rake db:drop:all db:create:all ; pg_restore --verbose --clean --no-acl --no-owner -d levelup_development ~/Downloads/latest.dump -j 8 ; prepdb && rake levelup:dev:create_admin && rails runner CreditCard.delete_all'
